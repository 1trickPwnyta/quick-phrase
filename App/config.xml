<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.kangaroostandard.quickphrase"
        versionCode = "9" 
        version     = "2.0.3" >

    <!-- versionCode is optional and Android only -->

    <name>Quick Phrase</name>

    <description>
        The game of unreasonable commotion.
    </description>

    <author href="https://www.kangaroostandard.com/" email="support@kangaroostandard.com">
        Kangaroo Standard
    </author>
	
	<icon src="images/icon.png" />
	
	<preference name="phonegap-version" value="3.7.0" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="keyboardDisplayRequiresUserAction" value="false" />
	<preference name="android-targetSdkVersion" value="14" />
	<preference name="android-minSdkVersion" value="11" />
	<preference name="permissions" value="none" />
	
	<gap:plugin name="org.apache.cordova.media" version="0.2.13" />
	<gap:plugin name="com.millerjames01.sqlite-plugin" version="1.0.1" />
	<gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />
	<gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
	<gap:plugin name="org.apache.cordova.vibration" version="0.3.11" />
	<gap:plugin name="org.apache.cordova.device" />
	
	<gap:config-file platform="android" parent="/manifest" mode="delete">
	    <uses-permission name="android.permission.RECORD_AUDIO" />
	</gap:config-file>

</widget>